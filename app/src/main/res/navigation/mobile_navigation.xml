<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.qrinternet.Activities.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_save"
            app:destination="@id/navigation_save"
            app:popUpTo="@id/navigation_save"
            app:popUpToInclusive="true"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.qrinternet.Activities.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_navigation_viewSaved"
            app:destination="@id/navigation_viewSaved"
            app:popUpTo="@id/navigation_viewSaved"
            app:popUpToInclusive="true"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_viewSaved"
        android:name="com.example.qrinternet.Activities.notifications.ViewQRCodeFragment"
        android:label="View QR Code"
        tools:layout="@layout/fragment_view_qr_code" >
        <action
            android:id="@+id/action_navigation_viewSaved_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>

    <fragment
        android:id="@+id/navigation_save"
        android:name="com.example.qrinternet.Activities.dashboard.SaveQRCodeFragment"
        android:label="Save QR Code"
        tools:layout="@layout/fragment_save_qr_code" />

</navigation>